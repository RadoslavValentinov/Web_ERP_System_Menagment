        position: absolute;
        top:240px;
    }

    #element {
        display: flex;
        flex-wrap: nowrap;
    }


    #result{
        border-radius:4px;
        overflow:hidden;
    }
    #result td{
       border:1px solid black;
       padding:5px 90px;
       text-align:start;
    }
    #result button{
        padding: 8px;
        background-color:red;
        color:white;
        border:1px solid white;
    }

</style>


<div class="sale">
    <div id="amount">
        <div class="option">
            <h3>
