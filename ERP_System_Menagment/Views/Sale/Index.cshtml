        #amount .sum {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 50px;
            position: relative;
            top: 70px;
        }

    .option button {
        padding: 20px 30px;
        display: inline;
        border-radius: 6px;
        margin: 5px;
    }

        .option button i {
            margin: 10px;
            padding-bottom: 5px;
            display: block;
            margin-bottom: 10px;
        }

    .fa-sack-dollar {
        color: forestgreen;
    }

    .fa-credit-card {
        color: deepskyblue;
    }

    #first {
        width: 300px;
    }

    input {
        width: 322px;
    }

    .container {
        margin-left: 210px;
